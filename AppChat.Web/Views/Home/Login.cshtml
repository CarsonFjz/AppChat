<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/config.js"></script>
    <script src="~/Scripts/MyAjax.js"></script>

    <script>
        $(function () {
            $(document).on('click', '#btnLogin', function () {
                $.ajax({
                    type: "post",
                    url: urlset("home/login"),
                    data: { username: $('#txtUserName').val(), password: $('#txtUserPwd').val() },
                    success: function (result) {
                        if (result.code == 0) {
                            var uid = result.data.userid;
                            if (uid <= 0) {
                                alert('用户名或者密码错误');
                            } else {
                                location.href = '/';
                            }
                        } else {
                            alert(result.msg);
                        }
                    }
                });
            });
        });
    </script>
</head>
<body>

    <input type="text" placeholder="User Name" id="txtUserName" />
    <input type="password" placeholder="Password" id="txtUserPwd" />
    <input type="button" id="btnLogin" value="Login" />
    <input type="button" id="btnRegist" value="Regist" />
</body>
</html>
